    "dae": {
      "macro": {
        "name": "Emotional Gamut",
        "img": "icons/magic/control/hypnosis-mesmerism-eye.webp",
        "type": "script",
        "scope": "global",
        "command": "if(args[0].macroPass === \"postPreambleComplete\") {\n    let target = workflow.targets.first();\n    if(target.actor.system.traits.ci.value.has(\"charmed\")) {\n        ui.notifications.warn(\"The target is immune to being charmed.\");\n        const hasConcApplied = MidiQOL.getConcentrationEffect(actor, macroItem.uuid)\n\t\tif (hasConcApplied)\tawait hasConcApplied.delete();\n        return workflow.aborted = true;\n    }\n}\n\nasync function applyDisadvantage(target, itemData, effectOriginActor) {\n    let effectData = [\n        {\n            \"icon\": `${itemData.img}`,\n            \"origin\": `${effectOriginActor.uuid}`,\n            \"disabled\": false,\n            \"name\": \"Emotional Gamut - Disadvantage\",\n            \"changes\": [\n            {\n                \"key\": \"flags.midi-qol.disadvantage.attack.all\",\n                \"mode\": 0,\n                \"value\": \"1\",\n                \"priority\": 20\n            }\n            ],\n            \"transfer\": false,\n            \"flags\": {\n            \"dae\": {\n                \"specialDuration\": [\n                    \"1Attack\",\n                    \"turnEndSource\"\n                ]\n            }\n            }\n        }\n    ];\n    await MidiQOL.socket().executeAsGM(\"createEffects\", { actorUuid: target.actor.uuid, effects: effectData });\n}\n\nif(args[0].macroPass === \"postActiveEffects\") {\n    let target = workflow.failedSaves.first();\n    if(!target) {\n        const hasConcApplied = MidiQOL.getConcentrationEffect(actor, macroItem.uuid)\n\t\tif (hasConcApplied)\tawait hasConcApplied.delete();\n        return;\n    }\n    let itemData = macroItem;\n    let effectOriginActor = actor;\n    await applyDisadvantage(target,itemData,effectOriginActor)\n}\n\nif(args[0] === \"each\") {\n    let target = token;\n    if(!target) return;\n    let itemData = item;\n    let effectOriginActor = await fromUuid(args[1]);\n    await applyDisadvantage(target,itemData,effectOriginActor)\n}\n\nif(args[0] === \"off\") {\n    let effectData = token.actor.appliedEffects.find(e => e.name === \"Emotional Gamut - Disadvantage\");\n    if(effectData) await effectData.delete();\n}",
