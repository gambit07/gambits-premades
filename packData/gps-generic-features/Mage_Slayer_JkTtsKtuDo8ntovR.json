        "type": "script",
        "scope": "global",
        "command": "if(args[0].macroPass === \"preDamageRollComplete\") {\n  if(workflow.hitTargets.size === 0) return;\n  let target = workflow.hitTargets.first();\n\n  const hasConcApplied = target.actor.appliedEffects.some(e => e.name.includes(\"Concentrating\"));\n\tif (!hasConcApplied) return;\n\n  let effectData = [{\n    \"origin\": macroItem.uuid,\n    \"disabled\": false,\n    \"name\": `${macroItem.name} - Disadvantage`,\n    \"img\": macroItem.img,\n    \"type\": \"base\",\n    \"changes\": [\n      {\n        \"key\": \"flags.midi-qol.disadvantage.concentration\",\n        \"mode\": 0,\n        \"value\": \"1\",\n        \"priority\": 20\n      }\n    ],\n    \"transfer\": false,\n    \"flags\": {\n      \"dae\": {\n        \"specialDuration\": [\n          \"isSave.con\"\n        ]\n      }\n    }\n  }];\n\n  await MidiQOL.socket().executeAsGM(\"createEffects\", { actorUuid: target.actor.uuid, effects: effectData });\n}",
