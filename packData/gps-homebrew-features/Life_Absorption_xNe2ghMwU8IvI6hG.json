    "dae": {
      "macro": {
        "name": "Life Absorption",
        "img": "icons/magic/unholy/orb-hands-pink.webp",
        "type": "script",
        "scope": "global",
        "command": "if(args[0] === \"each\") {\n    let effectOriginActor = item.parent;\n    let effectOriginToken = MidiQOL.tokenForActor(effectOriginActor.uuid);\n    const damageRoll = await new CONFIG.Dice.DamageRoll(`3d10`).evaluate();\n    await MidiQOL.displayDSNForRoll(damageRoll, 'damageRoll');\n\n    const itemData = {\n        name: \"Life Absorption - Damage (Necrotic)\",\n        type: \"feat\",\n        img: item.img\n    }\n\n    await new MidiQOL.DamageOnlyWorkflow(effectOriginActor, effectOriginToken, damageRoll.total, \"necrotic\", token ? [token] : [], damageRoll, {itemData: itemData});\n\n    const itemDataHealing = {\n        name: \"Life Absorption - Healing\",\n        type: \"feat\",\n        img: item.img\n    }\n\n    await new MidiQOL.DamageOnlyWorkflow(actor, token, damageRoll.total, \"healing\", effectOriginToken.object ? [effectOriginToken.object] : [], damageRoll, {itemData: itemDataHealing});\n}",
        "author": "roRDywD19pu2VxlC",
