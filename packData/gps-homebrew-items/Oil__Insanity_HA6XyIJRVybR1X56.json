    "dae": {
      "macro": {
        "name": "Oil, Insanity",
        "img": "icons/consumables/potions/bottle-bulb-corked-green.webp",
        "type": "script",
        "scope": "global",
        "command": "if(args[0] === \"on\") {\n    let validWeapons = actor.items.filter(itemData => \n        ((itemData.system.actionType === \"mwak\" || itemData.system.actionType === \"rwak\") && itemData.system.equipped === true && itemData.flags.midiProperties.magicdam === false)\n    );\n    let weaponIdArray = validWeapons.map(itemArray => itemArray.id);\n    await actor.setFlag(\"gambits-premades\", item.name + \"WeaponFlag\", weaponIdArray);\n    if (!validWeapons.length) return;\n\n    for(let weapon of validWeapons) {\n        await weapon.update({'flags.midiProperties.magicdam': true});\n    }\n}\n\nif(args[0] === \"off\") {\n    let weaponIdArray = await actor.getFlag(\"gambits-premades\", item.name + \"WeaponFlag\");\n    if (weaponIdArray.length === 0) return await actor.unsetFlag(\"gambits-premades\", item.name + \"WeaponFlag\");\n    \n    for (let weaponId of weaponIdArray) {\n        let weapon = actor.items.get(weaponId);\n        if (weapon) {\n            await weapon.update({'flags.midiProperties.magicdam': false});\n        }\n    }\n    await actor.unsetFlag(\"gambits-premades\", item.name + \"WeaponFlag\");\n}",
        "author": "roRDywD19pu2VxlC",
