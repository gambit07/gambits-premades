        "type": "script",
        "scope": "global",
        "command": "if(args[0].macroPass === \"preDamageRoll\") {\n    const target = workflow.hitTargets.first();\n    if(!target) return;\n    let effectData = [{\n        disabled: false,\n        name: \"Corrosive Damage DR\",\n        icon: macroItem.img,\n        origin: macroItem.uuid,\n        changes: [\n        {\n            key: 'flags.midi-qol.DR.all',\n            mode: 5,\n            priority: 99,\n            value: 0\n        }]\n    }];\n    \n    await MidiQOL.socket().executeAsGM(\"createEffects\", { actorUuid: target.actor.uuid, effects: effectData });\n}\n\nif(args[0].macroPass === \"postActiveEffects\") {\n    const target = workflow.hitTargets.first();\n    if(!target) return;\n    let effectName = await target.actor.appliedEffects.find(e => e.name === \"Corrosive Damage DR\");\n    if(effectName) await effectName.delete();\n}",
