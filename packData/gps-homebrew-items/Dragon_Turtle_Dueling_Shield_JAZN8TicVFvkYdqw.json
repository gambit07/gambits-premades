    "dae": {
      "macro": {
        "name": "Dragon Turtle Dueling Shield",
        "img": "icons/equipment/shield/kite-steel-boss-gold.webp",
        "type": "script",
        "scope": "global",
        "command": "if(args[0].macroPass === \"postDamageRoll\") {\n    let oaFlag = await actor.getFlag(\"gambits-premades\", \"dragonTurtleShieldOA\")\n    let target = workflow.hitTargets.first();\n\n    if(oaFlag && target) {\n        const itemData = {\n        name: \"Dragon Turtle Dueling Shield Save\",\n        type: \"feat\",\n            img: \"https://www.dndbeyond.com/avatars/40852/561/638472515906293225.png\",\n        effects: [],\n        flags: {\n            \"midi-qol\": {\n                noProvokeReaction: true,\n                onUseMacroName: null,\n                forceCEOff: true\n            }\n        },\n        system: {\n            equipped: true,\n            actionType: \"save\",\n            save: { dc: 16, ability: \"dex\", scaling: \"flat\" },\n            components: { concentration: false, material: false, ritual: false, somatic: false, value: \"\", vocal: false },\n            duration: { units: \"inst\", value: undefined }\n        }\n        };\n        const itemUpdate = new CONFIG.Item.documentClass(itemData, {parent: actor});\n        const options = { showFullCard: false, createWorkflow: true, versatile: false, configureDialog: false, targetUuids: [target.document.uuid], workflowOptions: {autoRollDamage: 'always', autoFastDamage: true} };\n        const saveResult = await MidiQOL.completeItemUse(itemUpdate, {}, options);\n\n        if(saveResult.failedSaves.size === 1) {\n            const hasEffectApplied = target.actor.appliedEffects.find(e => e.name === \"Prone\");\n            if (!hasEffectApplied) {\n                await game.gps.socket.executeAsGM(\"gmToggleStatus\", {tokenUuid: `${target.document.uuid}`, status: \"prone\", active: true });\n            }\n        }\n\n        let updatedType = foundry.utils.duplicate(macroItem.system.damage.parts);\n        updatedType[0][1] = \"piercing\";\n        await macroItem.update({\"system.damage.parts\" : updatedType});\n        await actor.unsetFlag(\"gambits-premades\", \"dragonTurtleShieldOA\");\n    }\n}\nif(args[0].macroPass === \"preItemRoll\") {\n    let oaFlag = await actor.getFlag(\"gambits-premades\", \"dragonTurtleShieldOA\")\n    if(oaFlag) {\n        let updatedType = foundry.utils.duplicate(macroItem.system.damage.parts);\n        updatedType[0][1] = \"bludgeoning\";\n        await macroItem.update({\"system.damage.parts\" : updatedType});\n    }\n}",
